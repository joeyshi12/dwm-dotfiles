#!/bin/sh

set -e

cleanup() {
    exec 3>&-
        rm "$FIFO_UEBERZUG"
}

if [ -n "$SSH_CLIENT" ] || [ -n "$SSH_TTY" ]; then
    /bin/lf "$@"
else
    export FIFO_UEBERZUG="${XDG_CACHE_HOME}/lf/ueberzug-$$"
    mkfifo "$FIFO_UEBERZUG"
    ueberzug layer -s < "$FIFO_UEBERZUG" -p json &
    exec 3>"$FIFO_UEBERZUG"
    trap cleanup INT HUP
    /bin/lf "$@" 3>&-
    cleanup
fi
